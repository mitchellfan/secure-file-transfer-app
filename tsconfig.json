{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node"],
    "rootDir": "./src",
  },
  "include": ["src/**/*"],
  
  "exclude": [
    "uploads",
    "node_modules"
  ]
}
